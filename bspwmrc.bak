#! /bin/sh

#
## General settings
#

BSPDIR="$HOME/.config/bspwm/"

#
## Exports
#

exec $BSPDIR/scripts/exports.lua &

#
## Display settings
#

exec $BSPDIR/scripts/display-layout.lua &
exec $BSPDIR/themes/polybar.sh &

#
## Autostart
#

# Sxhkd
pgrep -x sxhkd > /dev/null || sxhkd &

# Applications
exec $BSPDIR/scripts/applications.lua &

# Dunst
exec $BSPDIR/scripts/bspdunst.lua &

# Battery notifications
exec $BSPDIR/scripts/battery-notify.lua &

# Notification log
# exec $BSPDIR/scripts/notify-log.sh ~/.log/dunst-log &

#
## Appearance settings
#

# Colors
BSPWM_FBC='#83a598'
BSPWM_NBC='#282828'
BSPWM_ABC='#83a598'
BSPWM_PFC='#98971a'

# Gaps and borders
BSPWM_BORDER='2'
BSPWM_GAP='12'
BSPWM_SRATIO='0.50'

# Apply settings
bspc config focused_border_color "$BSPWM_FBC"
bspc config normal_border_color "$BSPWM_NBC"
bspc config active_border_color "$BSPWM_ABC"
bspc config presel_feedback_color "$BSPWM_PFC"

bspc config border_width "$BSPWM_BORDER"
bspc config window_gap "$BSPWM_GAP"
bspc config split_ratio "$BSPWM_SRATIO"

bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config paddingless_monocle true
bspc config single_monocle false
bspc config focus_follows_pointer true
bspc config presel_feedback true

#
## Window rules
#

exec $BSPDIR/scripts/rules.lua &
